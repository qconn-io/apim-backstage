# Environment variables for the Decoupled API Management Platform

# PostgreSQL - Backstage
POSTGRES_BACKSTAGE_USER=backstage
POSTGRES_BACKSTAGE_PASSWORD=backstage
POSTGRES_BACKSTAGE_DB=backstage
POSTGRES_BACKSTAGE_PORT=5432

# PostgreSQL - Strapi
POSTGRES_STRAPI_USER=strapi
POSTGRES_STRAPI_PASSWORD=strapi
POSTGRES_STRAPI_DB=strapi
POSTGRES_STRAPI_PORT=5433

# PostgreSQL - Keycloak
POSTGRES_KEYCLOAK_USER=keycloak
POSTGRES_KEYCLOAK_PASSWORD=keycloak
POSTGRES_KEYCLOAK_DB=keycloak
POSTGRES_KEYCLOAK_PORT=5434

# Strapi
STRAPI_PORT=1337
STRAPI_HOST=0.0.0.0
STRAPI_APP_KEYS="toBeModified1,toBeModified2"
STRAPI_API_TOKEN_SALT=tobemodified
STRAPI_ADMIN_JWT_SECRET=tobemodified
STRAPI_TRANSFER_TOKEN_SALT=tobemodified
STRAPI_JWT_SECRET=tobemodified
STRAPI_ENCRYPTION_KEY=tobemodified

# Keycloak
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_PORT=8080
KEYCLOAK_HOSTNAME=localhost
KEYCLOAK_BASE_URL=http://keycloak:8080

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Loki
LOKI_PORT=3100

# OpenTelemetry Collector
OTEL_COLLECTOR_PORT_GRPC=4317
OTEL_COLLECTOR_PORT_HTTP=4318
OTEL_COLLECTOR_PORT_ZIPKIN=9411

# OPA
OPA_PORT=8181

# Kafka (Event Bus)
KAFKA_PORT_EXTERNAL=9092
KAFKA_PORT_INTERNAL=9093 # Should not need to change unless port conflict inside Docker
ZOOKEEPER_PORT=2181

# Backstage App (if needed for app-config.yaml)
BACKSTAGE_BASE_URL=http://localhost:7007
BACKSTAGE_DB_HOST=postgres-backstage
BACKSTAGE_DB_PORT=5432
BACKSTAGE_PORT=3001
BACKSTAGE_BACKEND_PORT=7007
BACKSTAGE_SECRET=backstage-secret-key-change-in-production
KEYCLOAK_BACKSTAGE_CLIENT_ID=backstage
KEYCLOAK_BACKSTAGE_CLIENT_SECRET=backstage-client-secret

# GitHub Token for integrations (optional)
GITHUB_TOKEN=your-github-token-here
